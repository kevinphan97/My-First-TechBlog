<main class = "form-signin text-center">
  <form id = "login-form">
    <h1 class = "mb-3">Login</h1>
    <div class = "form-floating mb-3">
      <input type = "text" class = "form-control" id = "username-login" placeholder = "Username" autofocus = "true">
      <label for = "username-login">Username</label>
    </div>
    <div class = "form-floating mb-3">
      <input type = "password" class = "form-control" id = "password-login" placeholder = "Password" autofocus = "true">
      <label for = "password-login">Password</label>
    </div>
    <button class = "w-100 btn btn-lg btn btn-danger mb-3" type = "submit">Login</button>
    <a class = "signup-link" href = "/signup">Sign up</a>
  </form>
</main>

<script src="../public/javascript/login.js"></script>
<div class = "comment">
    {{#each this}}
        <div class = "card">
            <h3 class = "card-header">
                <div = class= "card-body comments">
                    <div class = "text">
                        {{comment_entry}}
                    </div>
                    <div>
                        -{{user.username}}, {{format_date created_at}}
                    </div>
                </div>
            </h3>
        </div>
    {{/each}}
</div>
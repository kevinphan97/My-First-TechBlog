<div class="container">
    <article class="single-post post-li bg-dark text-light">
        <div class="row">
            <div class="col-1 points d-flex justify-content-center align-items-center">
            <div class="col-11">
                <div class="title">
                    <span class="header">{{post.title}}</span>
                </div>

                <div class="meta">

                    by {{post.user.username}} on
                    {{format_date post.created_at}}
                    {{post.comments.length}} comment(s)
                </div>
            </div>
        </div>
        <div class="container">
            <div class="postContent">
                {{post.post_content}}
            </div>
        </div>

    </article>

    {{#if loggedIn}}

    <form class="comment-form">
        <div class="form-group">
            <textarea class="form-control commentBox" name="comment-body" placeholder="Type a Comment Here" maxlength="255"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Add Comment</button>
    </form>

    {{/if}}

    {{> comments post.comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}